    <servlet>
        <servlet-name>AddRoom</servlet-name>
        <servlet-class>Servlets.AddRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLogin</servlet-name>
        <servlet-class>Servlets.AdminLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicantLogin</servlet-name>
        <servlet-class>Servlets.ApplicantLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveRequest</servlet-name>
        <servlet-class>Servlets.ApproveRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DenyRequest</servlet-name>
        <servlet-class>Servlets.DenyRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeRequest</servlet-name>
        <servlet-class>Servlets.MakeRequest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveRoom</servlet-name>
        <servlet-class>Servlets.RemoveRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRequests</servlet-name>
        <servlet-class>Servlets.ViewRequests</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRoomsAdmin</servlet-name>
        <servlet-class>Servlets.ViewRoomsAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewRoomsApplicant</servlet-name>
        <servlet-class>Servlets.ViewRoomsApplicant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewYourReservations</servlet-name>
        <servlet-class>Servlets.ViewYourReservations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllReservations</servlet-name>
        <servlet-class>Servlets.ViewAllReservations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAdmin</servlet-name>
        <servlet-class>Servlets.AddAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddApplicant</servlet-name>
        <servlet-class>Servlets.AddApplicant</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddRoom</servlet-name>
        <url-pattern>/AddRoom/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLogin</servlet-name>
        <url-pattern>/AdminLogin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicantLogin</servlet-name>
        <url-pattern>/ApplicantLogin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveRequest</servlet-name>
        <url-pattern>/ApproveRequest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DenyRequest</servlet-name>
        <url-pattern>/DenyRequest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeRequest</servlet-name>
        <url-pattern>/MakeRequest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveRoom</servlet-name>
        <url-pattern>/RemoveRoom/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRequests</servlet-name>
        <url-pattern>/ViewRequests/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRoomsAdmin</servlet-name>
        <url-pattern>/ViewRoomsAdmin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRoomsApplicant</servlet-name>
        <url-pattern>/ViewRoomsApplicant/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>ViewYourReservations</servlet-name>
    <url-pattern>/ViewYourReservations/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllReservations</servlet-name>
        <url-pattern>/ViewAllReservations/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAdmin</servlet-name>
        <url-pattern>/AddAdmin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddApplicant</servlet-name>
        <url-pattern>/AddApplicant/*</url-pattern>
    </servlet-mapping>


    <!--Defines the welcome page.-->
    <welcome-file-list>
        <welcome-file>loginpage.html</welcome-file>
    </welcome-file-list>
</web-app>
